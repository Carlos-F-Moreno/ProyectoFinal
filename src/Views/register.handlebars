<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
      <form action="/register" method="post">
        <div class="form-group">
          {{#if errors.dni}}
          <div class="alert alert-danger w-75" role="alert">
            <span class="fw-medium">{{errors.dni}}</span>
          </div>
          {{/if}}
          <input type="number" class="form-control" id="DNI" min="0" placeholder="D.N.I" name="dni" />
        </div>
        <div class="form-group my-3">
          {{#if errors.password}}
          <div class="alert alert-danger w-75" role="alert">
            <span class="fw-medium">{{errors.password}}</span>
          </div>
          {{/if}}
          <input type="password" class="form-control" id="password" placeholder="Password" name="password">
        </div>
        <div class="form-group">
          <button class="btn btn-primary w-100 py-2" type="submit">Registrar</button>
        </div>
      </form>
    </div>
  </div>
</div>