{{#if success_msg}}
<div class="alert alert-success" role="alert">
  <strong>{{success_msg}}</strong>
</div>
{{/if}}
{{#if error_msg}}
<div class="alert alert-danger" role="alert">
  <strong>{{error_msg}}</strong>
</div>
{{/if}}
{{#if error}}
<div class="alert alert-danger" role="alert">
  <strong>{{error}}</strong>
</div>
{{/if}}